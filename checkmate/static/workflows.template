{% extends "default.template" %}
{% block title %}Checkmate - Workflow{% endblock %}
{% block content %}
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Tenant</th>
                  <th>Date</th>
                  <th>User</th>
                </tr>
              </thead>
              <tbody>
              {% for key, value in data.iteritems() %}
                <tr>
                  <td><a href="{{value.tenantId|default(tenant_id)|prepend}}/workflows/{{key}}"><i class="icon-tasks"></i> {{key}}</a></td>
                  <td>{{value['wf_spec']['name']}}</td>
                  <td>{{value['tenantId']}}</td>
                  <td>{{value['created']}}</td>
                  <td>{{value['task_tree']['children'][0]['children'][0]['attributes']['context']['username'] if value['task_tree']['children'][0]['children'][0]['attributes']['context'] is defined else value['task_tree']['children'][0]['attributes']['deployment']['username'] if value['task_tree']['children'][0]['attributes']['deployment'] is defined else value['task_tree']['children'][0]['attributes']['username']
                  }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
{% endblock %}
